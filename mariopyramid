#Ask for a number between 1 and 8
while True:
  n = int (input("Enter a number between 1 and 8: "))
  if n >= 1 and n <= 8:
    break

#For the number entered, print . and #s on the same line
for i in range (1,n+1):
  for j in range (n-i):
    print (".", end="")
  for k in range (i):
    print("#",end="")
  print("\r")
#We are done printing the pyramid  
print("Done")
